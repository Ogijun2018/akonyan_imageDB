<div class="container">
  <div class="jumbotron m-3">
    <h1 class="display-6 font-weight-bold">新着画像</h1>
    <hr class="my-4">
    <% if logged_in? %>
      <%= link_to '新規登録', new_picture_path, method: :get, :style => "color:white; text-decoration:none;", class: 'btn btn-primary'%>
      <%= link_to 'ログアウト', logout_path, method: :delete, :style => "color:white; text-decoration:none;", class: 'btn btn-primary'%>
    <% else %>
      <%= link_to "ログイン", login_path, :style => "color:white; text-decoration:none;", class: 'btn btn-primary'%>
    <% end %>
    <hr class="my-4">
    <div class="row d-flex" style="margin-left: 5px">
      <% @pictures.each do |picture| %>
        <div class="col-lg-4">
          <div class="card" style="width: 18rem; margin-bottom: 2rem;">
            <%= link_to image_tag(image_url(picture.picture), class: 'card-img-top'), picture, method: :get %>
            <div class="card-body">
              <div class="card-text d-flex justify-content-between align-items-center">
                <div>
                  PV数: <%= picture.impressions_count %> 
                </div>
                <div>
                  <% if logged_in? %>
                    <%= link_to "削除", picture, method: :delete, data: { confirm: "Are you sure?" } , :style => "color:white; text-decoration:none;", class: 'btn btn-danger' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @pictures %>
    </div>
  </div>
</div>